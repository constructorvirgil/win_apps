    <None Remove="tests\**" />
    <Page Remove="Core\**" />
    <Page Remove="tests\**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="Core\WindowCapture.Core.csproj" />
  </ItemGroup>

</Project>
