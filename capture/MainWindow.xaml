<Window x:Class="capture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:capture"
        mc:Ignorable="d"
        Title="窗口信息获取工具" Height="600" Width="520"
        Topmost="True" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="5" Padding="10,5">
                            <TextBlock x:Name="buttonText" Text="开始捕获" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F44336"/>
                                <Setter TargetName="buttonText" Property="Text" Value="停止捕获"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 控制区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <ToggleButton x:Name="CaptureToggle" Content="开始捕获" Width="100" Height="30"
                              Click="CaptureToggle_Click" Style="{StaticResource ToggleButtonStyle}"/>
                <CheckBox x:Name="ShowHighlightCheckBox" Content="显示高亮边框" 
                          VerticalAlignment="Center" Margin="15,0,0,0" IsChecked="True"/>
                <CheckBox x:Name="CaptureControlCheckBox" Content="捕获控件" 
                          VerticalAlignment="Center" Margin="15,0,0,0" IsChecked="True"/>
                <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="15,0,0,0" 
                           Foreground="#FF6B00" FontWeight="Bold" Text=""/>
            </StackPanel>
            <TextBlock Text="提示：Ctrl键=只捕获顶级窗口 | Shift键=停止捕获并保留信息 | 请将鼠标移到其他窗口上" 
                       Margin="0,8,0,0" Foreground="Gray" TextWrapping="Wrap" FontSize="11"/>
        </StackPanel>

        <!-- 鼠标位置信息 -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="鼠标位置" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="屏幕坐标："/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ScreenPosText" Text="X: 0, Y: 0"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="窗口坐标："/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="WindowPosText" Text="X: 0, Y: 0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 控件信息 -->
        <Border Grid.Row="2" Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="控件信息" FontWeight="Bold" Margin="0,0,0,5" Foreground="#1565C0"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="控件句柄：" Margin="0,2"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="ControlHandleText" IsReadOnly="True" 
                             Background="White" Margin="0,2"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="控件类名：" Margin="0,2"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="ControlClassText" IsReadOnly="True" 
                             Background="White" Margin="0,2"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="控件文本：" Margin="0,2"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="ControlTextContent" IsReadOnly="True" 
                             Background="White" Margin="0,2" TextWrapping="Wrap"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="控件位置：" Margin="0,2"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="ControlRectText" IsReadOnly="True" 
                             Background="White" Margin="0,2"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 窗口信息和窗口树 -->
        <TabControl Grid.Row="3">
            <!-- 窗口信息选项卡 -->
            <TabItem Header="窗口信息">
                <Border Background="#F5F5F5" Padding="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="窗口句柄：" Margin="0,3"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="HandleText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="窗口标题：" Margin="0,3"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="TitleText" IsReadOnly="True" 
                                     Background="White" Margin="0,3" TextWrapping="Wrap"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="窗口类名：" Margin="0,3"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="ClassNameText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="窗口位置：" Margin="0,3"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="WindowRectText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="窗口大小：" Margin="0,3"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="WindowSizeText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="进程ID：" Margin="0,3"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="ProcessIdText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="进程名称：" Margin="0,3"/>
                            <TextBox Grid.Row="6" Grid.Column="1" x:Name="ProcessNameText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="父窗口句柄：" Margin="0,3"/>
                            <TextBox Grid.Row="7" Grid.Column="1" x:Name="ParentHandleText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="窗口样式：" Margin="0,3"/>
                            <TextBox Grid.Row="8" Grid.Column="1" x:Name="WindowStyleText" IsReadOnly="True" 
                                     Background="White" Margin="0,3" TextWrapping="Wrap"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="AutomationId：" Margin="0,3"/>
                            <TextBox Grid.Row="9" Grid.Column="1" x:Name="AutomationIdText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="控件类型：" Margin="0,3"/>
                            <TextBox Grid.Row="10" Grid.Column="1" x:Name="ControlTypeText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>

                            <TextBlock Grid.Row="11" Grid.Column="0" Text="框架ID：" Margin="0,3"/>
                            <TextBox Grid.Row="11" Grid.Column="1" x:Name="FrameworkIdText" IsReadOnly="True" 
                                     Background="White" Margin="0,3"/>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </TabItem>
            
            <!-- 窗口树选项卡 -->
            <TabItem Header="窗口树">
                <Border Background="#F5F5F5" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="RefreshTreeButton" Content="刷新" Width="60" Height="24"
                                    Click="RefreshTreeButton_Click" Margin="0,0,10,0"/>
                            <CheckBox x:Name="AutoRefreshTreeCheckBox" Content="自动刷新" 
                                      VerticalAlignment="Center" IsChecked="False"/>
                            <TextBlock Text="（自动刷新可能影响性能）" VerticalAlignment="Center" 
                                       Margin="10,0,0,0" Foreground="Gray" FontSize="11"/>
                        </StackPanel>
                        <TreeView x:Name="WindowTreeView" Grid.Row="1" BorderThickness="1"
                                  SelectedItemChanged="WindowTreeView_SelectedItemChanged">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayText}" ToolTip="{Binding ToolTipText}"/>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
