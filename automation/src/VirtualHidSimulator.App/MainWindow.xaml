<Window x:Class="VirtualHidSimulator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualHidSimulator.App"
        mc:Ignorable="d"
        Title="虚拟 HID 输入模拟器" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题区域 -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="虚拟 HID 键盘/鼠标模拟测试工具" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            
            <!-- 驱动选择 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="驱动:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="DriverComboBox" Width="150" SelectionChanged="DriverComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text=" - "/>
                                <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusColor}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Content="?" Width="25" Margin="5,0,0,0" Click="DriverHelp_Click" 
                        ToolTip="查看驱动帮助信息"/>
                <Button x:Name="InstallDriverButton" Content="安装驱动" Margin="5,0,0,0" 
                        Click="InstallDriver_Click" ToolTip="自动下载并安装 Interception 驱动"
                        Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
        
        <!-- 主内容区域 -->
        <TabControl Grid.Row="1">
            <!-- 鼠标测试标签页 -->
            <TabItem Header="鼠标测试">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- 当前位置显示 -->
                        <GroupBox Header="当前鼠标位置">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="X:" Grid.Column="0"/>
                                <TextBox x:Name="CurrentXTextBox" Grid.Column="1" IsReadOnly="True"/>
                                <Label Content="Y:" Grid.Column="2"/>
                                <TextBox x:Name="CurrentYTextBox" Grid.Column="3" IsReadOnly="True"/>
                                <Button Content="刷新位置" Grid.Column="4" Click="RefreshPosition_Click" 
                                        HorizontalAlignment="Left" Margin="10,3,3,3"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- 移动测试 -->
                        <GroupBox Header="鼠标移动">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="目标X:" Grid.Column="0"/>
                                    <TextBox x:Name="MoveXTextBox" Grid.Column="1" Text="500"/>
                                    <Label Content="目标Y:" Grid.Column="2"/>
                                    <TextBox x:Name="MoveYTextBox" Grid.Column="3" Text="300"/>
                                </Grid>
                                <WrapPanel Margin="0,5,0,0">
                                    <Button Content="移动到位置" Click="MoveTo_Click"/>
                                    <Button Content="平滑移动" Click="MoveToSmooth_Click"/>
                                </WrapPanel>
                                
                                <Separator Margin="0,10"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="偏移X:" Grid.Column="0"/>
                                    <TextBox x:Name="DeltaXTextBox" Grid.Column="1" Text="100"/>
                                    <Label Content="偏移Y:" Grid.Column="2"/>
                                    <TextBox x:Name="DeltaYTextBox" Grid.Column="3" Text="100"/>
                                    <Button Content="相对移动" Grid.Column="4" Click="MoveBy_Click" 
                                            HorizontalAlignment="Left" Margin="10,3,3,3"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- 点击测试 -->
                        <GroupBox Header="鼠标点击">
                            <WrapPanel>
                                <Button Content="左键单击" Click="LeftClick_Click"/>
                                <Button Content="左键双击" Click="DoubleClick_Click"/>
                                <Button Content="右键单击" Click="RightClick_Click"/>
                                <Button Content="中键单击" Click="MiddleClick_Click"/>
                            </WrapPanel>
                        </GroupBox>
                        
                        <!-- 滚轮测试 -->
                        <GroupBox Header="滚轮滚动">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="滚动量:" Grid.Column="0"/>
                                    <TextBox x:Name="ScrollDeltaTextBox" Grid.Column="1" Text="3"/>
                                </Grid>
                                <WrapPanel Margin="0,5,0,0">
                                    <Button Content="向上滚动" Click="ScrollUp_Click"/>
                                    <Button Content="向下滚动" Click="ScrollDown_Click"/>
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- 拖拽测试 -->
                        <GroupBox Header="拖拽测试">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="起点X:" Grid.Column="0"/>
                                    <TextBox x:Name="DragFromXTextBox" Grid.Column="1" Text="200"/>
                                    <Label Content="起点Y:" Grid.Column="2"/>
                                    <TextBox x:Name="DragFromYTextBox" Grid.Column="3" Text="200"/>
                                    <Label Content="终点X:" Grid.Column="4"/>
                                    <TextBox x:Name="DragToXTextBox" Grid.Column="5" Text="400"/>
                                    <Label Content="终点Y:" Grid.Column="6"/>
                                    <TextBox x:Name="DragToYTextBox" Grid.Column="7" Text="400"/>
                                </Grid>
                                <Button Content="执行拖拽" Click="Drag_Click" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- 键盘测试标签页 -->
            <TabItem Header="键盘测试">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- 文本输入测试 -->
                        <GroupBox Header="文本输入">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="输入文本:" Grid.Column="0"/>
                                    <TextBox x:Name="InputTextBox" Grid.Column="1" Text="Hello World!"/>
                                </Grid>
                                <WrapPanel Margin="0,5,0,0">
                                    <Button Content="输入文本" Click="TypeText_Click"/>
                                    <Button Content="Unicode输入" Click="TypeUnicode_Click"/>
                                    <Button Content="带延迟输入" Click="TypeWithDelay_Click"/>
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- 单键测试 -->
                        <GroupBox Header="单键操作">
                            <WrapPanel>
                                <Button Content="Enter" Click="PressEnter_Click"/>
                                <Button Content="Tab" Click="PressTab_Click"/>
                                <Button Content="Escape" Click="PressEscape_Click"/>
                                <Button Content="Backspace" Click="PressBackspace_Click"/>
                                <Button Content="Delete" Click="PressDelete_Click"/>
                                <Button Content="空格" Click="PressSpace_Click"/>
                                <Button Content="↑" Click="PressUp_Click"/>
                                <Button Content="↓" Click="PressDown_Click"/>
                                <Button Content="←" Click="PressLeft_Click"/>
                                <Button Content="→" Click="PressRight_Click"/>
                            </WrapPanel>
                        </GroupBox>
                        
                        <!-- 功能键测试 -->
                        <GroupBox Header="功能键">
                            <WrapPanel>
                                <Button Content="F1" Click="PressF1_Click"/>
                                <Button Content="F2" Click="PressF2_Click"/>
                                <Button Content="F3" Click="PressF3_Click"/>
                                <Button Content="F4" Click="PressF4_Click"/>
                                <Button Content="F5" Click="PressF5_Click"/>
                                <Button Content="F6" Click="PressF6_Click"/>
                                <Button Content="F7" Click="PressF7_Click"/>
                                <Button Content="F8" Click="PressF8_Click"/>
                                <Button Content="F9" Click="PressF9_Click"/>
                                <Button Content="F10" Click="PressF10_Click"/>
                                <Button Content="F11" Click="PressF11_Click"/>
                                <Button Content="F12" Click="PressF12_Click"/>
                            </WrapPanel>
                        </GroupBox>
                        
                        <!-- 组合键测试 -->
                        <GroupBox Header="常用组合键">
                            <WrapPanel>
                                <Button Content="Ctrl+C (复制)" Click="CtrlC_Click"/>
                                <Button Content="Ctrl+V (粘贴)" Click="CtrlV_Click"/>
                                <Button Content="Ctrl+X (剪切)" Click="CtrlX_Click"/>
                                <Button Content="Ctrl+A (全选)" Click="CtrlA_Click"/>
                                <Button Content="Ctrl+Z (撤销)" Click="CtrlZ_Click"/>
                                <Button Content="Ctrl+Y (重做)" Click="CtrlY_Click"/>
                                <Button Content="Ctrl+S (保存)" Click="CtrlS_Click"/>
                                <Button Content="Ctrl+F (查找)" Click="CtrlF_Click"/>
                                <Button Content="Alt+F4" Click="AltF4_Click"/>
                                <Button Content="Alt+Tab" Click="AltTab_Click"/>
                                <Button Content="Win+D" Click="WinD_Click"/>
                                <Button Content="Win+E" Click="WinE_Click"/>
                                <Button Content="锁屏" Click="LockScreen_Click" ToolTip="直接调用 LockWorkStation API（Win+L 受系统保护无法模拟）"/>
                            </WrapPanel>
                        </GroupBox>
                        
                        <!-- 屏幕解锁 -->
                        <GroupBox Header="屏幕解锁">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="账号:" Grid.Column="0"/>
                                    <TextBox x:Name="UnlockUsernameTextBox" Grid.Column="1" Text="GIGABYTE"/>
                                    <Label Content="密码:" Grid.Column="2"/>
                                    <Grid Grid.Column="3">
                                        <PasswordBox x:Name="UnlockPasswordBox" Password="vvvqwe123"
                                                     Visibility="Visible"/>
                                        <TextBox x:Name="UnlockPasswordTextBox" Text="vvvqwe123"
                                                 Visibility="Collapsed"/>
                                    </Grid>
                                    <CheckBox x:Name="ShowPasswordCheckBox" Grid.Column="4" 
                                              Content="显示密码" VerticalAlignment="Center" Margin="10,0,0,0"
                                              Checked="ShowPassword_Checked" Unchecked="ShowPassword_Unchecked"/>
                                </Grid>
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="延迟(秒):" Grid.Column="0"/>
                                    <TextBox x:Name="UnlockDelayTextBox" Grid.Column="1" Text="2"/>
                                </Grid>
                                <TextBlock TextWrapping="Wrap" Foreground="OrangeRed" FontSize="11" Margin="3,5,0,5">
                                    <Run FontWeight="Bold">重要提示：</Run>
                                    <Run>Windows 安全限制导致 SendInput 在锁屏状态下无效。</Run>
                                    <LineBreak/>
                                    <Run>此功能仅适用于：屏幕已被手动唤醒（显示密码输入框）后，自动输入密码。</Run>
                                </TextBlock>
                                <WrapPanel>
                                    <Button x:Name="UnlockButton" Content="解锁屏幕" Click="UnlockScreen_Click" 
                                            Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
                                    <Button x:Name="CancelUnlockButton" Content="取消" Click="CancelUnlock_Click" 
                                            IsEnabled="False" Background="#FFF44336" Foreground="White"/>
                                    <Button Content="锁屏+解锁测试" Click="LockAndUnlock_Click" 
                                            ToolTip="先锁屏，然后自动解锁（注意：锁屏后需手动唤醒屏幕）"/>
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- 自定义组合键 -->
                        <GroupBox Header="自定义组合键">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="组合键:" Grid.Column="0"/>
                                    <TextBox x:Name="CustomComboTextBox" Grid.Column="1" 
                                             Text="Ctrl+Shift+N" 
                                             ToolTip="格式: 修饰键+键，例如 Ctrl+C, Ctrl+Shift+S, Alt+F4"/>
                                </Grid>
                                <TextBlock Text="支持的修饰键: Ctrl, Shift, Alt, Win" 
                                           Foreground="Gray" FontSize="11" Margin="3,2,0,5"/>
                                <Button Content="执行组合键" Click="CustomCombo_Click" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- 测试目标区域 -->
            <TabItem Header="测试目标区域">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="在下方文本框中测试键盘输入，或在空白区域测试鼠标操作" 
                               Margin="5" Foreground="Gray"/>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBox x:Name="TestTargetTextBox" Grid.Row="0" 
                                 AcceptsReturn="True" AcceptsTab="True"
                                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                 Margin="5" FontSize="14"
                                 Text="这是测试目标文本框，点击此处后可测试键盘输入..."/>
                        <Canvas x:Name="TestCanvas" Grid.Row="1" Background="LightGray" Margin="5"
                                MouseDown="TestCanvas_MouseDown" MouseMove="TestCanvas_MouseMove">
                            <TextBlock Canvas.Left="10" Canvas.Top="10" 
                                       Text="鼠标测试区域 - 显示鼠标事件" FontSize="12" Foreground="Gray"/>
                            <TextBlock x:Name="CanvasInfoText" Canvas.Left="10" Canvas.Top="30" 
                                       FontSize="11" Foreground="DarkBlue"/>
                        </Canvas>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="就绪"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
